<%- include("../partials/header.ejs") -%>
<%- include("../partials/navigation.ejs") -%>


<body>
  <link rel="stylesheet" href="assets/css/profile.css">
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">

      <div class="card login-card" style="margin-top: 100px">
      
      <h2 class="text-center" style="padding-top:10px; padding-bottom:10px;">Your Profile</h2>
            
			<div class="row no-gutters card-body">
     
        <div class="col-xl-12 col-lg-12 col-md-6">
            
						<!-- The user profile photo will come here -->
								<div class="row">	
                  
                  <div class="col-xl-6 col-lg-6">	
										<div class="brand-wrapper">
											<img src="/<%= user.profilePic %>" alt="Profile Pic" class="logo" style="border-radius:50%; width:60%; margin-left:20%; margin-right:20%; height: 250px;">
										</div>
                  </div>
                  	
								</div>
                
                <div class="col-lg-12">

    								<p class="login-card-description">

                      <div class="row">
                        
                        <div class="col-xl-6 col-lg-6 text-left">
                            
                            <h2>
                              <%= user.name %>
                            </h2>
                            <h5>
                              <%= user.degree %><br>
                              <%= user.department %>
                            </h5>

                        </div>

                        <div class="col-xl-6 col-lg-6">
                          <h5><b>Year Of Graduation</b> <%= user.yearOfGraduation %><br><br>
                          <b>Date of Birth </b><%= user.birthday %><br><br>
                          <b>Gender </b><%= user.gender %></h5><br>
                        </div>

                        <div class="col-xl-12 col-lg-12">
                          <h3>Your Courses</p>
                            <ul>
                                <% courses.map(course => { %>
                                    <li>Course: <%= course.name %> Course code: <%= course.courseCode %> instructor: <%= course.instructor.name %></li>
                                <% }); %>
                            </ul>                            
                        </div>

                      </div>
            
                            <a href="/edit-profile/<%= user.id %>/?edit=true" class="btn btn-primary">Edit Profile</a>

                     </p>

                  </div>                          

                </div>											<!--=============== Div class=row closes here=====-->

          </div>											<!--=============== Card closes here==============--->

        </div>												<!--=============== Container closes here ========-->	
 
  </main>


</body>

<%- include("../partials/footer.ejs") -%>
<%- include("../partials/javascript.ejs") -%>
