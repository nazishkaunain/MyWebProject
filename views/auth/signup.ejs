<%- include("../partials/header.ejs") -%>

<%- include("../partials/navigation.ejs") -%>
<main>
  <% if(errorMessage) { %>
  <div class="">
    <%= errorMessage %>
  </div>
  <% } %>
  <form class="form-inline my-2 my-lg-0" action="/signup" method="post">

    <label for="name">email</label>
    <input class="form-control mr-sm-2" type="text" name="name" id="name"/>


    <label for="email">email</label>
    <input class="form-control mr-sm-2" type="email" name="email" id="email"/>


    <label for="password">password</label>
    <input class="form-control mr-sm-2" type="password" name="password" id="password"/>

    <label for="confirm-password">confirm Password</label>
    <input class="form-control mr-sm-2" type="password" name="confirm-password" id="confirm-password"/>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
      Signup
    </button>
  </form>
</main>
<%- include("../partials/footer.ejs") -%>
