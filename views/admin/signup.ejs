<%- include("../partials/header.ejs") -%>
<%- include("../partials/navigation.ejs") -%>


<body>
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">


      <div class="card login-card" style="margin-top: 100px">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="assets/images/login.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <img src="assets/images/logo.svg" alt="logo" class="logo">
              </div>
              <p class="login-card-description">Sign into your account</p>

              <form action="/admin/signup" method="POST">

                <div class="form-group">
                    <label for="seretKey" class="sr-only">Name</label>
                    <input type="text" name="seretKey" id="seretKey" class="form-control" placeholder="What is the Secret Code">
                  </div>

                  <div class="form-group">
                    <label for="name" class="sr-only">Name</label>
                    <input type="name" name="name" id="name" class="form-control" placeholder="Name">
                  </div>

                  <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email address">
                  </div>

                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                  </div>

                  <div class="form-group mb-4">
                    <label for="confirm-password" class="sr-only">Confirm Password</label>
                    <input type="password" name="confirm-password" id="confirm-password" class="form-control" placeholder="Confirm Password">
                  </div>

                  <% if(errorMessage) { %>
                    <div class="">
                      <b>
                      <%= errorMessage %>
                      </b><br><br>
                    </div>
                  <% } %>


				  <!-- Check these two files Upon the login button we needed -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-block login-btn mb-4" type="submit">Sign Up</button>
                  <!-- <input name="login" id="login" class="btn btn-block login-btn mb-4" type="button" type="submit" value="Login"> -->

              </form>
                <p class="login-card-footer-text">Already have an account?<a href="/admin/login" class="text-reset"> Login here </a></p>
                <nav class="login-card-footer-nav">
                  <a href="#">Terms of use.</a>
                  <a href="#">Privacy policy</a>
                </nav>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

<!-- why is javascript partial not use here -->


  <!-- JS files CDN -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

