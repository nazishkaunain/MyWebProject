<body>
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">


      <div class="card login-card" style="margin-top: 100px">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="assets/images/login.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <img src="assets/images/logo.svg" alt="logo" class="logo">
              </div>
              <p class="login-card-description">Sign into your account</p>

              <form action="/course" method="POST">
                
                <div class="form-group">
                    <label for="name" class="sr-only">Name of the Course</label>
                    <input type="text" name="name" id="name" class="form-control">
                  </div>


                  <div class="form-group">
                    <label for="courseCode" class="sr-only">Name of the Course</label>
                    <input type="text" name="courseCode" id="courseCode" class="form-control">
                  </div>
                  
                  <div class="form-group">
                    <label for="instructor" class="sr-only">Name of the Course</label>
                    <input type="text" name="instructor" id="instructor" class="form-control">
                  </div>
        

              


				  <!-- Check these two files Upon the login button we needed -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-block login-btn mb-4" type="submit">Add my profile</button>
                  <!-- <input name="login" id="login" class="btn btn-block login-btn mb-4" type="button" type="submit" value="Login"> -->

              </form>
                <nav class="login-card-footer-nav">
                  <a href="#">Terms of use.</a>
                  <a href="#">Privacy policy</a>
                </nav>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

