<body>

              <p class="">Add course</p>

              <form action="/admin/<% if(editMode) {%>edit-instructor<% } else { %>add-instructor<% } %>" method="POST">
                
                    <label for="name">Name of the Instructor</label>
                    <input type="text" name="name" id="name"  placeholder="Name of the Instructor" value="<% if(editMode) {%><%= instructor.name %><% } %>">
     


     
                    <label for="opinion" class="sr-only">Opinion</label>
                    <input type="text" name="opinion" id="opinion" class="form-control" placeholder="Opinion" value="<% if(editMode) {%><%= instructor.opinion %><% } %>">
            
